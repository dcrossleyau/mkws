{{#if md-title-remainder}}
<b>{{md-title-remainder}}</b>
{{/if}}
{{#if md-title-responsibility}}
<i>{{md-title-responsibility}}</i>
{{/if}}
{{{mkws-paragraphs md-description paragraphs sentences}}}
