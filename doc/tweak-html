#!/bin/sh

# Tweak the HTML generated by pandoc into the form we want

cat ${@+"$@"} |
    sed '/^<col width="[0-9]*%" \/>$/d' |
    sed 's/<body>/&\
<img src="images\/mkws-logo-300px.png" alt="MKWS logo"\/>/' | awk '
/^<h[12] id/ {
  if (seen) {
    print "</div>";
  }     
  print "<div class='"'"pane"'"'>";
  seen = 1;
}
/^<hr/ {
  print "</div>";
}
{ print }
'
